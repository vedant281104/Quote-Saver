<%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Saved Quotes:
      </h2>
      <ul class="space-y-4">
        <% quotes.forEach(q => { %>
          <li class="bg-gray-100 p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300">
            <p class="text-lg italic text-gray-800">"<%= q.quote %>"</p>
            <p class="text-right text-gray-600 font-semibold mt-2">- <%= q.author %></p>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
