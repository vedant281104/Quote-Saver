<%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav') %>
  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Add a New Quote</h1>
    <form action="/host/add-quote" method="POST" class="max-w-md mx-auto">
      <input 
        type="text" 
        name="author" 
        placeholder="Author" 
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" 
        required 
      />
      <textarea 
        name="quote" 
        rows="4" 
        placeholder="Write your quote here..." 
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" 
        required
      ></textarea>
      <input 
        type="submit" 
        value="Save Quote" 
        class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" 
      />
    </form>
  </main>
</body>
</html>

<style>
  .input {
    width: 100%;
    padding: 0.5rem 1rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.375rem;
    outline: none;
  }
</style>
